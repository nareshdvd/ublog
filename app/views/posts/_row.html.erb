<%= turbo_frame_tag dom_id(post) do %>
  <tr class="border-b">
    <td class="py-1"><%= post.title %></td>
    <td class="py-1">
      <%= post.published_at&.strftime("%b %d, %Y") || "Draft" %>
    </td>
    <td class="py-1 space-x-2">
      <%= link_to "Edit", edit_post_path(post), data: { turbo_frame: "post_form" }, class: "text-blue-500" %>
      <%= button_to "Delete", post_path(post), method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-500" %>
    </td>
  </tr>
<% end %>
